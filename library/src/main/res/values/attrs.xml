<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabContainerViewStyle">
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="iconWidth" format="dimension" />
        <attr name="divideLineColor" format="color" />
        <attr name="divideLineHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MarqueeLayout">
        <attr name="switchTime" format="integer"/>
        <attr name="scrollTime" format="integer"/>
        <attr name="orientation" format="enum">
            <enum name="up" value="1"/>
            <enum name="down" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="enableAlphaAnim" format="boolean"/>
        <attr name="enableScaleAnim" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width2" format="dimension" />
        <attr name="border_color2" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="CodeEditView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="integer"/>
        <attr name="borderSize" format="integer"/>
        <attr name="borderMargin" format="integer"/>
        <attr name="borderNum" format="integer"/>
    </declare-styleable>
</resources>