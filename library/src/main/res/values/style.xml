<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lib_popup_bottom_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/lib_pop_bottom_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/lib_pop_bottom_exit_anim</item>
    </style>

    <style name="lib_popup_fade_anim_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/lib_fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/lib_fade_out_anim</item>
    </style>

    <style name="lib_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryDark">@color/default_color</item>
        <item name="colorAccent">@color/default_color</item>
    </style>

    <style name="lib_DefaultDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="lib_DefaultBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/lib_selector_btn</item>
    </style>

    <style name="lib_WrapContentWH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lib_WrapContentWHNoPadding" parent="lib_WrapContentWH">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="lib_DefaultRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="lib_DefaultRowLeftIcon">
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
    </style>

    <style name="lib_DefaultRowLeftTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="lib_DefaultRowRightText" parent="lib_WrapContentWH">
        <item name="android:textColor">@color/gray_9</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
    </style>

    <style name="lib_DefaultRowRightIcon">
        <item name="android:layout_width">@dimen/dp_8</item>
        <item name="android:layout_height">@dimen/dp_18</item>
        <item name="android:src">@drawable/lib_ic_arrow_right</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
    </style>
</resources>