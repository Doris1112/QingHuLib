<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:maxHeight="@dimen/dp_300"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lib_choose_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/default_bg"
        android:dividerHeight="@dimen/dp_05" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@color/default_bg" />

    <TextView
        android:id="@+id/lib_choose_list_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/lib_selector_popup_btn_cancel"
        android:gravity="center"
        android:text="@string/lib_cancel"
        android:textColor="@color/gray_9"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>