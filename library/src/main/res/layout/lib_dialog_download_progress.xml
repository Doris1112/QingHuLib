<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_bg_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="@string/lib_download_progress"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/text_size_19" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/default_bg" />

    <TextView
        android:id="@+id/lib_download_progress_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/text_size_15" />

    <ProgressBar
        android:id="@+id/lib_download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_margin="@dimen/dp_15"
        android:progressDrawable="@drawable/lib_progress_download"
        android:max="100" />

</LinearLayout>