<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lib_bg_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lib_contact_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lib_contact_icon1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:contentDescription="@string/app_name"
            android:src="@color/default_color" />

        <TextView
            android:id="@+id/lib_contact_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/lib_contact_content1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/lib_contact_operation1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/lib_selector_btn"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:id="@+id/lib_contact_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/default_bg" />

    <LinearLayout
        android:id="@+id/lib_contact_layout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lib_contact_icon2"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:contentDescription="@string/app_name"
            android:src="@color/default_color" />

        <TextView
            android:id="@+id/lib_contact_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/lib_contact_content2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/lib_contact_operation2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/lib_selector_btn"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</LinearLayout>