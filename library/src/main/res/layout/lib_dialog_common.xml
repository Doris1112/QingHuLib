<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lib_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/text_size_19" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/default_bg" />

    <TextView
        android:id="@+id/lib_common_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/text_size_17" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/default_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lib_common_cancel"
            style="@style/lib_WrapContentWHNoPadding"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:background="@drawable/lib_selector_dialog_btn_left"
            android:text="@string/lib_cancel"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/text_size_17" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/default_bg" />

        <TextView
            android:id="@+id/lib_common_sure"
            style="@style/lib_WrapContentWHNoPadding"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/lib_selector_dialog_btn_right"
            android:padding="@dimen/dp_10"
            android:text="@string/lib_sure"
            android:textColor="@color/default_color"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>
</LinearLayout>